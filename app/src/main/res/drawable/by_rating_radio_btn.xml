    </item>
    <item
        android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/primaryZero" />
            <stroke
                android:width="1dp"
                android:color="@color/secondaryFirst" />
        </shape>
    </item>
    <item
        android:state_checked="true">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/primaryZero" />
        </shape>
    </item>
    <item>
