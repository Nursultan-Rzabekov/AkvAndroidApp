                    app:popExitAnim="@anim/slide_out_right"
                    app:enterAnim="@anim/slide_in_right"
                    app:exitAnim="@anim/slide_out_left"
                    />


                <action android:id="@+id/action_searchFilterFragment_to_filterCityFragment"
                    app:destination="@id/filterCityFragment"
