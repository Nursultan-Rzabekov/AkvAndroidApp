<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/message_doc_recycler_view_item_name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:contentDescription="@string/document"
            android:layout_width="@dimen/dim_36dp"
            android:layout_height="@dimen/dim_36dp"
            android:src="@drawable/ic_document_send"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/dim_4dp">

            <TextView
                android:id="@+id/message_doc_recycler_view_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryZero"
                android:textSize="18sp"
                android:minWidth="128dp"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/message_doc_recycler_view_item_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:maxLength="14"
                android:ellipsize="end"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>