<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/fragment_add_ad_check_back_btn"
        layout="@layout/back_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_28dp"
        android:layout_marginTop="@dimen/dim_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_add_ad_check_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_60dp"
        android:layout_marginTop="@dimen/dim_16dp"
        android:layout_marginEnd="@dimen/dim_60dp"
        android:text="@string/kind_of_udopstva"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_add_ad_check_back_btn" />

    <TextView
        android:id="@+id/fragment_add_ad_check_drop_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_12dp"
        android:layout_marginEnd="@dimen/dim_60dp"
        android:text="@string/drop_all"
        android:textColor="@color/primaryZero"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_add_ad_check_tv1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_add_ad_check_drop_all">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_60dp"
            android:layout_marginTop="@dimen/dim_16dp"
            android:layout_marginEnd="@dimen/dim_60dp"
            android:paddingBottom="@dimen/dim_48dp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_add_ad_check_recycler_view"
                android:visibility="visible"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_width="match_parent"
                android:nestedScrollingEnabled="false"
                android:layout_height="wrap_content"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragment_add_ad_check_add_chkbox"
                style="@style/AllButton.TextButton"
                app:icon="@drawable/ic_plus_red_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/add_your"
                app:iconPadding="@dimen/dim_8dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textColor="@color/primaryZero"
                android:textSize="16sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fragment_add_ad_check_add_chkbox_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:contentDescription="@string/add"
                    android:id="@+id/fragment_add_ad_check_fakecheckbox"
                    android:layout_width="@dimen/dim_24dp"
                    android:layout_height="@dimen/dim_24dp"
                    android:padding="3dp"
                    android:layout_marginStart="@dimen/dim_4dp"
                    android:layout_marginTop="@dimen/dim_8dp"
                    android:layout_marginBottom="@dimen/dim_8dp"
                    android:src="@drawable/fake_checkbox"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/fragment_add_ad_check_add_chkbox_et"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences"
                    android:lines="1"
                    android:textColorHighlight="@color/primaryZero"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/fragment_add_ad_check_fakecheckbox"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/fragment_add_ad_check_add_chkbox_btn"
                    style="@style/AllButton.Unelevated"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dim_36dp"
                    android:text="@string/add"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/fragment_add_ad_check_add_chkbox_et"
                    app:layout_constraintTop_toBottomOf="@id/fragment_add_ad_check_add_chkbox_et" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/fragment_add_ad_check_remove_chkbox_btn"
                    style="@style/AllButton.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dim_36dp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/primaryZero"
                    android:text="@string/cancel"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/fragment_add_ad_check_add_chkbox_et"
                    app:layout_constraintTop_toBottomOf="@id/fragment_add_ad_check_add_chkbox_et" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragment_add_ad_check_next_btn"
                style="@style/BasicButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:text="@string/next"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>