<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="35dp"
    android:paddingTop="22dp"
    android:paddingEnd="35dp"
    android:paddingBottom="22dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:minHeight="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/reviews_page_recycler_view_item_avatar_civ"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fragment_zhilye_comment1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/reviews_page_recycler_view_item_avatar_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="Алиса"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:maxLines="1"
            app:layout_constraintEnd_toStartOf="@+id/reviews_page_recycler_view_item_avatar_score"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/reviews_page_recycler_view_item_avatar_civ"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/reviews_page_recycler_view_item_avatar_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_star_real"
            android:drawableTint="@color/primaryZero"
            android:text="4.6"
            android:textColor="@color/primaryZero"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/reviews_page_recycler_view_item_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/reviews_page_recycler_view_item_avatar_nickname" />

        <TextView
            android:id="@+id/reviews_page_recycler_view_item_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="Сентябрь 2019"
            android:textColor="@color/secondaryFirst"
            android:textSize="11sp"
            android:maxLines="1"
            app:layout_constraintEnd_toStartOf="@+id/reviews_page_recycler_view_item_avatar_score"
            app:layout_constraintStart_toEndOf="@+id/reviews_page_recycler_view_item_avatar_civ"
            app:layout_constraintTop_toBottomOf="@+id/reviews_page_recycler_view_item_avatar_nickname" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/reviews_page_recycler_view_item_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Алмата однако забывать, что начало\n повседневной работы по формированию."
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        tools:layout_editor_absoluteX="35dp" />

</androidx.constraintlayout.widget.ConstraintLayout>