<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/elevation_3"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/cornerRadius3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dim_20dp"
            android:paddingStart="@dimen/dim_24dp"
            android:paddingBottom="@dimen/dim_20dp"
            android:paddingEnd="@dimen/dim_12dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="2dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/requests_recycler_view_item_iv"
                    android:contentDescription="@string/appartment"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:src="@drawable/test_image_back"
                    android:scaleType="centerCrop"/>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/dim_12dp"
                android:layout_marginEnd="@dimen/dim_12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/requests_recycler_view_item_title_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/hotel_del_luxe"
                        android:layout_marginEnd="@dimen/dim_8dp"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/requests_recycler_view_item_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/random_time1"
                        android:textSize="12sp"/>

                </LinearLayout>

                <View
                    android:id="@+id/divider54"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/dim_4dp"
                    android:layout_marginEnd="@dimen/dim_60dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/requests_recycler_view_item_message_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/random_guest1"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:maxLines="2"
                    android:ellipsize="end"/>

            </LinearLayout>

            <ImageView
                android:contentDescription="@string/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_forward"
                android:tint="@color/grey8"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>