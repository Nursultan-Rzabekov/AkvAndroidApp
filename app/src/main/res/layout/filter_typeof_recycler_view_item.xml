<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/filter_type_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dim_24dp"
        android:paddingTop="@dimen/dim_16dp"
        android:paddingEnd="@dimen/dim_24dp"
        android:paddingBottom="@dimen/dim_16dp">

        <TextView
            android:id="@+id/fragment_type_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/any"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="normal"/>

        <RadioButton
            android:id="@+id/fragment_type_checked_rbtn"
            android:layout_width="@dimen/dim_24dp"
            android:layout_height="@dimen/dim_24dp"
            android:background="@drawable/checking_rbtn"
            android:button="@android:color/transparent"
            android:clickable="false"
            android:focusable="false"/>

    </LinearLayout>

    <View
        android:id="@+id/divider61"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

</LinearLayout>