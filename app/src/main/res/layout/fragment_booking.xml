<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/dim_24dp"
    android:paddingEnd="@dimen/dim_24dp"
    >

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/fragment_booking_lb1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_8dp"
            android:layout_marginTop="@dimen/dim_48dp"
            android:layout_marginEnd="@dimen/dim_8dp"
            android:text="@string/my_book"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_8dp"
            android:layout_marginTop="@dimen/dim_16dp"
            android:layout_marginEnd="@dimen/dim_8dp"
            android:layout_marginBottom="@dimen/dim_24dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_booking_trip_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/roads_2"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_4dp"
                android:layout_marginEnd="@dimen/dim_4dp"
                android:text="@string/dot"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragment_booking_guests_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guests_5"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/fragment_booking_lb2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/book_empty"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/dim_8dp"
        android:layout_marginEnd="@dimen/dim_8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_booking_lb2">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_booking_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fragment_booking_book_more_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BasicOutlinedButton"
            android:layout_marginTop="@dimen/dim_36dp"
            app:cornerRadius="@dimen/cornerRadius1"
            android:text="@string/book_zhilye"
            android:paddingTop="@dimen/dim_12dp"
            android:paddingBottom="@dimen/dim_12dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>