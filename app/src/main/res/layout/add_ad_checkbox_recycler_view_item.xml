<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/add_ad_checkbox_recycler_view_item_chkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        style="@style/BasicCheckBox"
        android:text="@string/conditioner"
        android:textSize="20sp"
        android:layout_weight="1"
        android:gravity="center_vertical"/>

    <ImageView
        android:id="@+id/add_ad_checkbox_recycler_view_item_close_iv"
        android:contentDescription="@string/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:src="@drawable/ic_circle_close"/>

</LinearLayout>