<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/elevation_3"
        app:cardCornerRadius="@dimen/cornerRadius1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dim_16dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/book_requests_canceled_recycler_view_item_iv_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="2dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:contentDescription="@string/random_location"
                        android:id="@+id/book_requests_canceled_recycler_view_item_iv"
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                        android:background="@drawable/image_all_corner_back1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/test_image_back" />

                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:id="@+id/linearLayout8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dim_16dp"
                    android:layout_marginEnd="@dimen/dim_16dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/book_requests_canceled_recycler_view_item_iv_card"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/book_requests_canceled_recycler_view_item_title_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hotel_del_luxe"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/divider36"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginEnd="@dimen/dim_48dp"
                        android:background="?android:attr/listDivider" />

                    <TextView
                        android:id="@+id/book_requests_recycler_view_item_canceled_lb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/request_canceled"
                        android:textColor="@color/primaryZero"
                        android:textStyle="bold"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/book_requests_recycler_view_item_host_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>