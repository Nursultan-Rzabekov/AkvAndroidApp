<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/dim_28dp"
            android:paddingStart="@dimen/dim_24dp"
            android:paddingEnd="@dimen/dim_24dp"
            android:paddingBottom="@dimen/dim_24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_my_adds_change_title_l_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                app:counterEnabled="true"
                app:counterMaxLength="200"
                app:boxCollapsedPaddingTop="0dp"
                style="@style/BasicTextFilled">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fragment_my_adds_change_title_et"
                    style="@style/BasicEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/title"
                    android:textSize="20sp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_24dp"
                android:text="@string/dscription"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_my_adds_change_desc_l_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                app:counterEnabled="true"
                app:counterMaxLength="500"
                app:boxCollapsedPaddingTop="0dp"
                style="@style/BasicTextFilled">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fragment_my_adds_change_desc_et"
                    style="@style/BasicEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|start"
                    android:maxLines="10"
                    android:hint="@string/dscription"
                    android:inputType="textMultiLine"
                    android:textSize="13sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_24dp"
                android:text="@string/photos"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_my_adds_change_photos_recycler_view"
                android:layout_marginTop="@dimen/dim_24dp"
                android:layout_marginStart="@dimen/dim_24dp"
                android:layout_marginEnd="@dimen/dim_24dp"
                android:layout_marginBottom="@dimen/dim_24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/fragment_my_adds_change_photos_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/zero_from15"
                android:layout_marginEnd="@dimen/dim_16dp"
                android:textSize="12sp"
                android:gravity="end"/>

            <View
                android:id="@+id/divider52"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/fragment_my_adds_change_rules"
                style="@style/ButtonCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_4dp"
                android:layout_marginTop="@dimen/dim_24dp"
                android:layout_marginEnd="@dimen/dim_4dp"
                app:cardBackgroundColor="@color/white"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dim_16dp"
                    android:drawableEnd="@drawable/ic_forward"
                    android:fontFamily="@font/montserrat_bold"
                    android:paddingStart="@dimen/dim_16dp"
                    android:paddingEnd="0dp"
                    android:text="@string/house_rules"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/fragment_my_adds_change_facilities"
                style="@style/ButtonCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_4dp"
                android:layout_marginTop="@dimen/dim_8dp"
                android:layout_marginEnd="@dimen/dim_4dp"
                app:cardBackgroundColor="@color/white"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dim_16dp"
                    android:drawableEnd="@drawable/ic_forward"
                    android:fontFamily="@font/montserrat_bold"
                    android:paddingStart="@dimen/dim_16dp"
                    android:paddingEnd="0dp"
                    android:text="@string/udopstva"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/fragment_my_adds_change_near"
                style="@style/ButtonCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_4dp"
                android:layout_marginTop="@dimen/dim_8dp"
                android:layout_marginEnd="@dimen/dim_4dp"
                app:cardBackgroundColor="@color/white"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dim_16dp"
                    android:drawableEnd="@drawable/ic_forward"
                    android:fontFamily="@font/montserrat_bold"
                    android:paddingStart="@dimen/dim_16dp"
                    android:paddingEnd="0dp"
                    android:text="@string/near_by"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/fragment_my_adds_change_available_dates"
                style="@style/ButtonCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_4dp"
                android:layout_marginTop="@dimen/dim_8dp"
                android:layout_marginEnd="@dimen/dim_4dp"
                app:cardBackgroundColor="@color/white"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dim_16dp"
                    android:drawableEnd="@drawable/ic_forward"
                    android:fontFamily="@font/montserrat_bold"
                    android:paddingStart="@dimen/dim_16dp"
                    android:paddingEnd="0dp"
                    android:text="@string/available_dates"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_28dp"
                android:text="@string/price"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_my_adds_change_price_l_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                app:boxCollapsedPaddingTop="0dp"
                app:suffixText="@string/kzt"
                app:suffixTextColor="@color/black"
                style="@style/BasicTextFilled">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fragment_my_adds_change_price_et"
                    style="@style/BasicEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|start"
                    android:hint="@string/price"
                    android:inputType="numberDecimal"
                    android:textSize="20sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_24dp"
                android:text="@string/address"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_my_adds_change_address_l_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                app:boxCollapsedPaddingTop="0dp"
                app:counterMaxLength="400"
                app:counterEnabled="true"
                style="@style/BasicTextFilled">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fragment_my_adds_change_address_et"
                    style="@style/BasicEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/address"
                    android:gravity="top|start"
                    android:textSize="18sp"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>