<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dim_24dp"
        android:paddingEnd="@dimen/dim_16dp"
        android:paddingTop="@dimen/dim_8dp"
        android:paddingBottom="@dimen/dim_8dp">

        <TextView
            android:id="@+id/earnings_recycler_view_item_nickname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/muratov_d"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="19sp"
            android:textColor="@color/secondaryFirst"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/earnings_recycler_view_item_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_38_000kzt"
                android:textColor="@color/primaryZero"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/earnings_recycler_view_item_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_20_12_2019"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/divider51"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />


</LinearLayout>