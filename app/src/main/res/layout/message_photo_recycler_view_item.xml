<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dim_4dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/message_photo_recycler_view_item_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/primaryZero"
        app:strokeWidth="1dp"
        app:strokeColor="@color/primaryZero"
        app:cardCornerRadius="@dimen/cornerRadius1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:contentDescription="@string/photos"
                android:id="@+id/message_photo_recycler_view_item_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                android:maxHeight="200dp"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/primaryZero"
                android:src="@drawable/test_image_back"
                android:scaleType="centerCrop"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>