<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/cornerRadius4"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/chat_bottom_sheet_dialog_camera_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/AllButton.TextButton"
                android:text="@string/camera"
                android:textAlignment="textStart"
                app:icon="@drawable/ic_camera"
                app:iconGravity="start"
                app:iconPadding="@dimen/dim_12dp"
                app:iconTint="@color/primaryZero"
                android:paddingTop="@dimen/dim_8dp"
                android:paddingBottom="@dimen/dim_8dp"
                android:paddingStart="@dimen/dim_24dp"
                android:paddingEnd="@dimen/dim_8dp"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <View
                android:id="@+id/divider78"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:foregroundTint="@color/grey8"
                android:background="?android:attr/listDivider" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/chat_bottom_sheet_dialog_photo_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/AllButton.TextButton"
                android:text="@string/photo_and_video"
                android:textAlignment="textStart"
                app:icon="@drawable/ic_gallery"
                app:iconGravity="start"
                app:iconPadding="@dimen/dim_12dp"
                app:iconTint="@color/primaryZero"
                android:paddingTop="@dimen/dim_8dp"
                android:paddingBottom="@dimen/dim_8dp"
                android:paddingStart="@dimen/dim_24dp"
                android:paddingEnd="@dimen/dim_8dp"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <View
                android:id="@+id/divider46"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:foregroundTint="@color/grey8"
                android:background="?android:attr/listDivider" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/chat_bottom_sheet_dialog_document_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/AllButton.TextButton"
                android:text="@string/document"
                android:textAlignment="textStart"
                app:icon="@drawable/ic_document"
                app:iconTint="@color/primaryZero"
                app:iconGravity="start"
                app:iconPadding="@dimen/dim_12dp"
                android:paddingTop="@dimen/dim_8dp"
                android:paddingBottom="@dimen/dim_8dp"
                android:paddingStart="@dimen/dim_24dp"
                android:paddingEnd="@dimen/dim_8dp"
                android:textColor="@color/black"
                android:textSize="18sp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:id="@+id/cancel_sheet"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/cornerRadius4">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/chat_bottom_sheet_dialog_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AllButton.TextButton"
            android:paddingTop="@dimen/dim_8dp"
            android:paddingBottom="@dimen/dim_8dp"
            android:text="@string/cancel"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"/>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>