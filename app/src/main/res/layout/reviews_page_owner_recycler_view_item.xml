<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dim_12dp"
        android:paddingStart="@dimen/dim_24dp"
        android:paddingEnd="@dimen/dim_24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="end|center_vertical">

            <ImageButton
                android:contentDescription="@string/delete"
                android:id="@+id/reviews_page_owner_recycler_view_item_delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete_bucket"
                android:layout_marginEnd="@dimen/dim_12dp"
                style="@style/BasicImageButton"
                android:tint="@color/primaryZero"/>

            <TextView
                android:id="@+id/reviews_page_owner_recycler_view_item_more_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dim_12dp"
                android:paddingEnd="@dimen/dim_8dp"
                android:text="@string/three_dots"
                android:textColor="@color/primaryZero"
                android:textSize="24sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/constraintLayout11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:minHeight="@dimen/dim_60dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/reviews_page_owner_recycler_view_item_avatar_civ"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_default_avavatar" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/dim_16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/reviews_page_owner_recycler_view_item_avatar_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/random_name1"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1"/>

                <TextView
                    android:id="@+id/reviews_page_owner_recycler_view_item_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/random_date1"
                    android:layout_marginTop="@dimen/dim_4dp"
                    android:textColor="@color/secondaryFirst"
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:maxLines="1" />

            </LinearLayout>

            <TextView
                android:id="@+id/reviews_page_owner_recycler_view_item_avatar_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_star_red"
                android:drawablePadding="@dimen/dim_4dp"
                android:text="@string/random_score1"
                android:textColor="@color/primaryZero"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/reviews_page_owner_recycler_view_item_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_24dp"
            android:layout_marginBottom="@dimen/dim_28dp"
            android:text="@string/random_text5"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    </LinearLayout>

    <View
        android:id="@+id/divider69"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

</LinearLayout>