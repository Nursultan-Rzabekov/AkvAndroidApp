<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fragment_zhilye_book_bottom_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    >

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/fragment_zhilye_book_cardimage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="@dimen/cornerRadius3"
                        android:layout_gravity="center_vertical"
                        >

                        <ImageView
                            android:contentDescription="@string/hotel_del_luxe"
                            android:id="@+id/fragment_zhilye_book_iv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/test_image_back"
                            android:scaleType="centerCrop"/>

                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_gravity="center_vertical"
                        >

                        <TextView
                            android:id="@+id/fragment_zhilye_book_title_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:ellipsize="end"
                            android:text="@string/hotel_del_luxe"
                            android:textSize="25sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/fragment_zhilye_book_address_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/random_address"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:id="@+id/divider20"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:baselineAligned="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:paddingStart="36dp"
                    android:paddingEnd="36dp"
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/fragment_zhilye_book_arrival_lb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/arrival"
                            android:textColor="@color/black"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/fragment_zhilye_book_arrival_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/random_date"
                            android:textColor="@color/primaryZero"
                            android:textSize="26sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/fragment_zhilye_book_departure_lb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/departure"
                            android:textColor="@color/black"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/fragment_zhilye_book_departure_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/random_date2"
                            android:textColor="@color/primaryZero"
                            android:textSize="26sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/fragment_zhilye_book_guests_lb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/guests"
                            android:textColor="@color/black"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/fragment_zhilye_book_guests_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/_5"
                            android:textColor="@color/primaryZero"
                            android:textSize="26sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/divider21"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/fragment_zhilye_book_nights_lb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/random_calculations1"
                            android:textSize="18sp"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/fragment_zhilye_book_nights_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/random_price1"
                            android:textSize="18sp"
                            android:layout_gravity="end"
                            android:textAlignment="viewEnd"
                            android:layout_weight="1"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/fragment_zhilye_book_tax_lb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tax"
                            android:textSize="18sp"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/fragment_zhilye_book_tax_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/random_price2"
                            android:textSize="18sp"
                            android:layout_gravity="end"
                            android:textAlignment="viewEnd"
                            android:layout_weight="1"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/divider27"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fragment_zhilye_book_sumup_lb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/fragment_zhilye_book_total_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/random_price3"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        android:textAlignment="viewEnd"
                        android:layout_weight="1"
                        android:textColor="@color/primaryZero"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <FrameLayout
            android:id="@+id/fragment_zhilye_book_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/elevation_3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragment_zhilye_book_nex_btn"
                style="@style/AllButton.Unelevated"
                app:cornerRadius="@dimen/cornerRadius1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:layout_marginStart="@dimen/dim_24dp"
                android:layout_marginTop="@dimen/dim_12dp"
                android:layout_marginEnd="@dimen/dim_24dp"
                android:layout_marginBottom="@dimen/dim_12dp"
                android:text="@string/_continue_"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>