<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/elevation_3"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/cornerRadius3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dim_12dp"
            android:paddingStart="@dimen/dim_8dp"
            android:paddingBottom="@dimen/dim_12dp"
            android:paddingEnd="@dimen/dim_16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/chats_recycler_view_item_civ"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/profile_default_avavatar"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/dim_12dp"
                android:layout_marginTop="@dimen/dim_4dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/chats_recycler_view_item_from_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="16sp"
                        android:textColor="@color/secondaryFirst"
                        android:textStyle="bold"
                        android:text="@string/muratov_d"/>
                    <TextView
                        android:id="@+id/chats_recycler_view_item_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_30_11"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/chats_recycler_view_item_last_message_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/random_message1"
                    android:textColor="@color/black"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/dim_4dp"/>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>