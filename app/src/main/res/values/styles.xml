<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/cornerRadius1</item>
        <item name="boxCornerRadiusBottomStart">@dimen/cornerRadius1</item>
        <item name="boxCornerRadiusTopEnd">@dimen/cornerRadius1</item>
        <item name="boxCornerRadiusTopStart">@dimen/cornerRadius1</item>
        <item name="android:layout_marginStart">@dimen/gl_margin1</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="hintEnabled">false</item>
        <item name="android:layout_marginEnd">@dimen/gl_margin2</item>
        <item name='boxStrokeWidth'>1dp</item>
        <item name="boxStrokeColor">@android:color/black</item>
    </style>

    <style name="BasicTextOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/cornerRadius3</item>
        <item name="boxCornerRadiusBottomStart">@dimen/cornerRadius3</item>
        <item name="boxCornerRadiusTopEnd">@dimen/cornerRadius3</item>
        <item name="boxCornerRadiusTopStart">@dimen/cornerRadius3</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="hintEnabled">false</item>
        <item name='boxStrokeWidth'>1dp</item>
        <item name="boxStrokeColor">@android:color/black</item>
    </style>

    <style name="BasicButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primaryZero</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="elevation">0dp</item>
        <item name="android:textSize">@dimen/text_content3</item>
        <item name="android:layout_marginStart">@dimen/gl_margin1</item>
        <item name="android:layout_marginEnd">@dimen/gl_margin2</item>
        <item name="android:paddingBottom">@dimen/padding_1</item>
        <item name="android:paddingTop">@dimen/padding_1</item>
        <item name="cornerRadius">@dimen/cornerRadius2</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="GoogleLogButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="cornerRadius">@dimen/cornerRadius2</item>
        <item name="elevation">0dp</item>
        <item name="android:layout_marginStart">@dimen/gl_margin1</item>
        <item name="android:layout_marginEnd">@dimen/gl_margin2</item>
        <item name="android:paddingBottom">@dimen/padding_1</item>
        <item name="android:paddingTop">@dimen/padding_1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_content3</item>
        <item name="android:strokeColor">@android:color/secondary_text_light</item>
    </style>

    <style name="AKV_Label" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">137dp</item>
        <item name="android:layout_marginEnd">137dp</item>
        <item name="android:layout_marginBottom">19dp</item>
        <item name="android:alpha">0.5</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:text">@string/akv</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/secondaryFirst</item>
        <item name="android:textSize">@dimen/text_content1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Privacy_Term_Label" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">137dp</item>
        <item name="android:layout_marginEnd">137dp</item>
        <item name="android:layout_marginBottom">19dp</item>
        <item name="android:alpha">0.5</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_content1</item>
    </style>

    <style name="BasicImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="BasicChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipCornerRadius">7dp</item>
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="chipStrokeColor">@android:color/secondary_text_light</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipIconVisible">true</item>
        <item name="chipIconTint">@color/secondaryFirst</item>
        <item name="rippleColor">@color/secondaryFirst</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="BasicCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">50dp</item>
        <item name="android:minHeight">320dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="cardElevation">2dp</item>
    </style>
</resources>
