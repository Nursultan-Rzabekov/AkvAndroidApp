<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryZero</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/secondaryFirst</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:statusBarColor">@color/primaryZero</item>
    </style>


    <style name="TextOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/cornerRadius1</item>
        <item name="boxCornerRadiusBottomStart">@dimen/cornerRadius1</item>
        <item name="boxCornerRadiusTopEnd">@dimen/cornerRadius1</item>
        <item name="boxCornerRadiusTopStart">@dimen/cornerRadius1</item>
        <item name="android:layout_marginStart">@dimen/gl_margin1</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="hintEnabled">false</item>
        <item name="android:layout_marginEnd">@dimen/gl_margin2</item>
        <item name='boxStrokeWidth'>1dp</item>
        <item name="boxStrokeColor">@color/secondaryFirst</item>
    </style>

    <style name="CityTextOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/cornerRadius1</item>
        <item name="boxCornerRadiusBottomStart">@dimen/cornerRadius1</item>
        <item name="boxCornerRadiusTopEnd">@dimen/cornerRadius1</item>
        <item name="boxCornerRadiusTopStart">@dimen/cornerRadius1</item>
        <item name="hintEnabled">false</item>
        <item name='boxStrokeWidth'>1dp</item>
        <item name="boxStrokeColor">@color/secondaryFirst</item>
    </style>

    <style name="CityTextOutlined.Dense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxCornerRadiusBottomEnd">@dimen/cornerRadius1</item>
        <item name="boxCornerRadiusBottomStart">@dimen/cornerRadius1</item>
        <item name="boxCornerRadiusTopEnd">@dimen/cornerRadius1</item>
        <item name="boxCornerRadiusTopStart">@dimen/cornerRadius1</item>
        <item name="hintEnabled">false</item>
        <item name='boxStrokeWidth'>1dp</item>
        <item name="boxStrokeColor">@color/secondaryFirst</item>
    </style>

    <style name="MessageTextOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxCornerRadiusBottomEnd">@dimen/cornerRadius5</item>
        <item name="boxCornerRadiusBottomStart">@dimen/cornerRadius5</item>
        <item name="boxCornerRadiusTopEnd">@dimen/cornerRadius5</item>
        <item name="boxCornerRadiusTopStart">@dimen/cornerRadius5</item>
        <item name="hintEnabled">false</item>
        <item name='boxStrokeWidth'>2dp</item>
        <item name="boxStrokeColor">@color/secondaryFirst</item>
    </style>

    <style name="BasicTextOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/cornerRadius3</item>
        <item name="boxCornerRadiusBottomStart">@dimen/cornerRadius3</item>
        <item name="boxCornerRadiusTopEnd">@dimen/cornerRadius3</item>
        <item name="boxCornerRadiusTopStart">@dimen/cornerRadius3</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="hintEnabled">false</item>
        <item name='boxStrokeWidth'>1dp</item>
        <item name="boxStrokeColor">@color/secondaryFirst</item>
    </style>

    <style name="AdPriceTextOulined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/cornerRadius3</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/cornerRadius3</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="hintEnabled">false</item>
        <item name='boxStrokeWidth'>1dp</item>
        <item name="boxStrokeColor">@color/secondaryFirst</item>
    </style>

    <style name="BasicTextFilled" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:topLeftRadius">@dimen/cornerRadius3</item>
        <item name="android:topRightRadius">@dimen/cornerRadius3</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="AllButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primaryZero</item>
        <item name="elevation">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AllButton.TextButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AllButton.Unelevated" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/primaryZero</item>
        <item name="cornerRadius">@dimen/cornerRadius3</item>
    </style>

    <style name="BasicButton" parent="AllButton">
        <item name="android:textSize">@dimen/text_content3</item>
        <item name="android:layout_marginStart">@dimen/gl_margin1</item>
        <item name="android:layout_marginEnd">@dimen/gl_margin2</item>
        <item name="android:paddingBottom">@dimen/padding_1</item>
        <item name="android:paddingTop">@dimen/padding_1</item>
        <item name="cornerRadius">@dimen/cornerRadius2</item>
    </style>
    <style name="BasicMiniButton" parent="AllButton">
        <item name="android:paddingStart">@dimen/dim_36dp</item>
        <item name="android:paddingEnd">@dimen/dim_36dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">@dimen/text_content3</item>
        <item name="cornerRadius">@dimen/cornerRadius2</item>
    </style>
    <style name="MinorButton" parent="AllButton">
        <item name="cornerRadius">@dimen/cornerRadius3</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>
    <style name="FilterButton" parent="AllButton">
        <item name="cornerRadius">@dimen/cornerRadius1</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="GoogleLogButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="cornerRadius">@dimen/cornerRadius2</item>
        <item name="elevation">0dp</item>
        <item name="android:layout_marginStart">@dimen/gl_margin1</item>
        <item name="android:layout_marginEnd">@dimen/gl_margin2</item>
        <item name="android:paddingBottom">@dimen/padding_1</item>
        <item name="android:paddingTop">@dimen/padding_1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_content3</item>
        <item name="android:strokeColor">@color/secondaryFirst</item>
    </style>

    <style name="AKV_Label" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">137dp</item>
        <item name="android:layout_marginEnd">137dp</item>
        <item name="android:layout_marginBottom">19dp</item>
        <item name="android:drawableStart">@drawable/ic_akv_icon_16dp</item>
        <item name="android:drawablePadding">@dimen/dim_4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:alpha">0.9</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:text">@string/akv</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/secondaryFirst</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Privacy_Term_Label" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">137dp</item>
        <item name="android:layout_marginEnd">137dp</item>
        <item name="android:layout_marginBottom">19dp</item>
        <item name="android:alpha">0.5</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_content1</item>
    </style>

    <style name="BasicImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="BasicChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipCornerRadius">7dp</item>
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="chipStrokeColor">@android:color/secondary_text_light</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipIconVisible">true</item>
        <item name="chipIconTint">@color/secondaryFirst</item>
        <item name="rippleColor">@color/secondaryFirst</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="BasicCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">50dp</item>
        <item name="android:minHeight">320dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="ButtonCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="cardCornerRadius">@dimen/cornerRadius3</item>
        <item name="cardElevation">@dimen/elevation_3</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="CommentCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/cornerRadius1</item>
        <item name="cardElevation">3dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="BasicBackButton1" parent="Widget.MaterialComponents.TextView">
        <item name="android:drawableStart">@drawable/ic_back</item>
        <item name="android:layout_marginStart">@dimen/button_margin1</item>
        <item name="android:layout_marginTop">@dimen/button_margin2</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/text_button1</item>
        <item name="android:text">@string/back</item>
    </style>

    <style name="MySpinnerDatePickerStyle" parent="android:Theme.Material.Light.Dialog.NoActionBar.MinWidth">
        <item name="android:datePickerStyle">@style/MySpinnerDatePicker</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/Alert.Button.Texting.Positive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/Alert.Button.Texting.Negative</item>
        <item name="android:negativeButtonText">@string/cancel</item>
        <item name="android:positiveButtonText">@string/text_ok</item>
    </style>

    <style name="CustomBasicDialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
    </style>

    <style name="MySpinnerDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="Alert.Button.Texting" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/primaryZero</item>
        <item name="android:textColor">@color/primaryZero</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Alert.Button.Texting.Positive" parent="Alert.Button.Texting">
        <item name="android:text">OK</item>
    </style>
    <style name="Alert.Button.Texting.Negative" parent="Alert.Button.Texting">
        <item name="android:text">Отмена</item>
    </style>

    <style name="BasicEditText">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textCursorDrawable">@drawable/cursor_style</item>
        <item name="android:colorControlHighlight">@color/primaryZero</item>
    </style>

    <style name="BasicOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/primaryZero</item>
    </style>

    <style name="BasicOutlinedButton.BottomButton" parent="BasicOutlinedButton">
        <item name="cornerRadius">@dimen/cornerRadius1</item>
        <item name="elevation">@dimen/elevation_3</item>
        <item name="android:paddingTop">@dimen/dim_12dp</item>
        <item name="android:paddingBottom">@dimen/dim_12dp</item>
    </style>

    <style name="BasicOutlinedButton.SlideButton" parent="BasicOutlinedButton">
        <item name="cornerRadius">@dimen/cornerRadius3</item>
        <item name="elevation">@dimen/elevation_3</item>
        <item name="android:paddingTop">@dimen/dim_12dp</item>
        <item name="android:paddingBottom">@dimen/dim_12dp</item>
    </style>

    <style name="BasicDropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/grey5</item>
        <item name='boxStrokeWidth'>1dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/cornerRadius3</item>
        <item name="boxCornerRadiusBottomStart">@dimen/cornerRadius3</item>
        <item name="boxCornerRadiusTopEnd">@dimen/cornerRadius3</item>
        <item name="boxCornerRadiusTopStart">@dimen/cornerRadius3</item>
    </style>

    <style name="BasicCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:checkboxStyle">@style/Widget.MaterialComponents.CompoundButton.CheckBox</item>
        <item name="useMaterialThemeColors">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:buttonTint">@color/primaryZero</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="BackTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:drawableStart">@drawable/ic_back_16dp</item>
        <item name="android:drawablePadding">@dimen/dim_8dp</item>
        <item name="android:text">@string/back</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:layout_marginTop">@dimen/dim_60dp</item>
        <item name="android:layout_marginStart">@dimen/dim_36dp</item>
    </style>

    <style name="BasicRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@drawable/cheked_color_selector</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
